# This is my first, very own configuration file for yamllint!
# It extends the default conf by adjusting some options.

extends: default

rules:
  document-start: disable  # don't bother me with this rule
  line-length: disable
  indentation:
    spaces: 2
    indent-sequences: whatever  # seems to mess when there is a list of list, using whatever to prevent double indentation of list of list
