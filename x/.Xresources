! ===================
! urxvt configuration
! ===================

URxvt*scrollBar:	false
URxvt*letterSpace:  	-0.8
URxvt.font: 		xft:FuraMono Nerd Font Mono:regular:size=11
URxvt.boldFont:		xft:FuraMono Nerd Font Mono:regular:size=11
URxvt*cursorBlink:  true
URxvt.iso14755:		false
URxvt*utf8:			true
URxvt.keysym.C-equal:         resize-font:bigger
URxvt.keysym.C-parenright:    resize-font:smaller
URxvt*depth: 32
! hard contrast: *background: #1d2021
URxvt*background: [93]#282828
! =================
! rofi color scheme
! =================
#define hl_text #1F1F1F
#define m_color #ffb52a

rofi.color-enabled:		true
rofi.separator-style: 	solid
rofi.color-normal:		argb:00000000, #a89984, argb:00000000,  m_color,  hl_text
rofi.color-urgent:		argb:00000000, #F99157, argb:00000000,  #F99157,  hl_text
rofi.color-active:		argb:00000000, #6699CC, argb:00000000,  #6699CC,  hl_text
rofi.color-window:		argb:ee222222, m_color, m_color
rofi.font: Roboto regular 12
rofi.bw:                0
rofi.padding:           10
rofi.hide-scrollbar:    true
rofi.lines:             6


*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
